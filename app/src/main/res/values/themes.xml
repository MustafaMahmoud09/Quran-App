<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Quran" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_btn</item>
        <item name="colorPrimaryVariant">@color/theme_app_file_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textTitle">
    <item name="android:textColor">@color/theme_app</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/_20sdp</item>
    <item name="android:text">@string/app_name</item>
    </style>

    <style name="knowTitle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="text_name_prayer_item">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/text_name_prayer_color</item>
    </style>
    <style name="style_view">
        <item name="android:background">@drawable/view_title_shape</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_12sdp</item>
    </style>
    <style name="text">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="text.black">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text.blue">
        <item name="android:textColor">@color/theme_btn</item>
    </style>
    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="textName">
        <item name="android:textColor">@color/taxt_surah_title_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="textNameSurahEnglish" parent="textName">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>
    <style name="textNameSurahArabic" parent="textName">
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>
    <style name="besmalahText" parent="textName">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/_19sdp</item>
    </style>
    <style name="ayahInSurah">
      <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="ayahInSurah.arabic">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily" >sans-serif-medium</item>
    </style>
    <style name="ayahInSurah.english">
        <item name="android:textColor">@color/theme_app</item>
    </style>
    <style name="theme_tool_bar">
       <item name="android:textSize">@dimen/text22</item>
       <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:foregroundTint">@color/theme_app</item>
    </style>
</resources>