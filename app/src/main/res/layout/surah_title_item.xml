<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parentSurahTitleItemId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
    android:id="@+id/btnStartSoundId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/_9sdp"
    android:textColor="@color/theme_btn"
    style="@style/text.blue"
    />

    <TextView
        android:id="@+id/nameSoundEnglishTranslateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_color"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="@+id/nameSoundEnglishId"
        app:layout_constraintTop_toBottomOf="@+id/nameSoundEnglishId" />
    <TextView
        android:id="@+id/nameSoundEnglishId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        style="@style/text.black"
        app:layout_constraintBottom_toBottomOf="@+id/btnStartSoundId"
        app:layout_constraintLeft_toRightOf="@+id/btnStartSoundId"
        app:layout_constraintTop_toTopOf="@+id/btnStartSoundId"
        />

    <TextView
        android:id="@+id/nameSoundArabicSurah"
        style="@style/text.blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/nameSoundEnglishTranslateId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameSoundEnglishId" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin1"
        app:layout_constraintTop_toBottomOf="@id/nameSoundEnglishTranslateId"
        android:layout_marginTop="@dimen/_9sdp"
        android:background="@color/title_color"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageRvelationType"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/nameSoundEnglishTranslateId"
        app:layout_constraintBottom_toBottomOf="@+id/nameSoundEnglishTranslateId"
        app:layout_constraintRight_toLeftOf="@id/nameSoundEnglishTranslateId"
        android:layout_marginRight="@dimen/_5sdp"
        android:tint="@color/title_color"
        />
</androidx.constraintlayout.widget.ConstraintLayout>