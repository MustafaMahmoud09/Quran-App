<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parentJuzId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/numberJuzItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_19sdp"
        style="@style/text.black"
        />

    <TextView
        android:id="@+id/nameArabicJuz"
        style="@style/text.blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/numberJuzItemId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numberJuzItemId" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin1"
        app:layout_constraintTop_toBottomOf="@id/numberJuzItemId"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/title_color"
        />
</androidx.constraintlayout.widget.ConstraintLayout>