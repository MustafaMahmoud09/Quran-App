<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.QuranFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPrayerId"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/zero"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />

        <TextView
            android:visibility="invisible"
            android:id="@+id/titleQuran"
            style="@style/textTitle"
            android:text="@string/prayer_times"
            android:textSize="@dimen/text22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/_58sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/next_view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/view" />
        <View
            android:id="@+id/view"
            style="@style/style_view"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/_123sdp"
            android:backgroundTint="@color/view_big_prayers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            android:src="@drawable/pray"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_marginBottom="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_19sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/next_prayer"
            android:textColor="@color/color_next_prayer"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />


    <TextView
        android:id="@+id/nextPrayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_3sdp"
        android:textColor="@color/color_next_prayer"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
            android:id="@+id/textSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/theme_app"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textTimeH"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/margin12"
        android:textColor="@color/color_item_prayer"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/textTimeM"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:gravity="center"
        android:textColor="@color/color_item_prayer"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@id/textTimeH"
        app:layout_constraintStart_toStartOf="@id/textTimeH"
        app:layout_constraintTop_toBottomOf="@+id/textTimeH" />
</androidx.constraintlayout.widget.ConstraintLayout>

